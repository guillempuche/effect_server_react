{
	"compileOnSave": false,
	"compilerOptions": {
		// Basic Options
		"allowJs": false,
		"declaration": false,
		"lib": ["ESNext", "dom"],
		"module": "ESNext",
		"sourceMap": true,
		"target": "ES2020",
		// Strict Type-Checking Options
		"alwaysStrict": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUncheckedIndexedAccess": true,
		"strict": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"useUnknownInCatchVariables": true,
		// Module Resolution Options
		"baseUrl": ".",
		"moduleResolution": "node",
		"paths": {
			"@journals/adapters/repositories": [
				"packages/adapters/repositories/src/index.ts"
			],
			"@journals/core": ["packages/core/src/index.ts"],
			"@journals/usecases": ["packages/usecases/src/index.ts"]
		},
		"typeRoots": ["node_modules/@types"],
		// Interoperability and Emit Options
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"noEmit": true, // Required by allowImportingTsExtensions
		// Performance Options
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		// Additional Checks
		"allowImportingTsExtensions": true,
		"allowUnreachableCode": false,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": ["node_modules", "tmp"]
}
